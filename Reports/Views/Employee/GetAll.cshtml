@model Pagination<Reports.Entities.Employee>
@{
    ViewData["Title"] = "All Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Employees</h1>

<p style="text-align:left;margin-right:20px;">
    <a class="btn btn-success" asp-action="Create">Create Employee</a>
</p>
<form asp-action="GetAll" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="SearchString" value="@ViewData["EmployeeFilter"]" placeholder="Search..."/>
            <input type="submit" value="Search" class="btn btn-dark"/>
            <a class="btn btn-danger" asp-action="GetAll">Back to Full List</a>
        </p>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-success table-striped">
        <thead>
        <tr class="text-center">
            <th>
                <a asp-action="GetAll" asp-route-sortOrder="@ViewData["NameSort"]" asp-route-employeeFilter="@ViewData["EmployeeFilter"]">Name</a>
            </th>
            <th>
                <a asp-action="GetAll" asp-route-sortOrder="@ViewData["RoleSort"]" asp-route-employeeFilter="@ViewData["EmployeeFilter"]">Role</a>
            </th>
            <th>
                <a asp-action="GetAll" asp-route-sortOrder="@ViewData["EmailSort"]" asp-route-employeeFilter="@ViewData["EmployeeFilter"]">Email</a>
            </th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Role
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    <a asp-action="Update" class="btn btn-primary" asp-route-Id="@item.Id">Update</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-Id="@item.Id">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-Id="@item.Id">Delete</a>
                    <a asp-action="SetMentor" class="btn btn-warning" asp-route-Id="@item.Id">Set Mentor</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <a asp-action="GetAll"
       asp-route-sortOrder="@ViewData["EmployeeSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-employeeFilter="@ViewData["EmployeeFilter"]"
       class="btn btn-dark @prevDisabled">
        Previous
    </a>
    <a asp-action="GetAll"
       asp-route-sortOrder="@ViewData["EmployeeSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-employeeFilter="@ViewData["EmployeeFilter"]"
       class="btn btn-dark @nextDisabled">
        Next
    </a>
</div>