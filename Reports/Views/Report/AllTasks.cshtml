@model IQueryable<Reports.Entities.WeeklyReport>
@{
    ViewData["Title"] = "WeeklyReports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="GetAll" class="btn btn-danger">Back</a>

@foreach (var item in Model)
{
    <div class="container p-3 my-3 border">
        <h1>WeeklyReports</h1>
        <hr/>
        <dl class="row">
            <dt class="col-sm-3">
                Report
            </dt>
            <dd class="col-sm-9">
                @item.Report
            </dd>
            <dt class="col-sm-3">
                Task
            </dt>
            <dd class="col-sm-9">
                @item.Task
            </dd>
        </dl>
        <div>
            <a class="btn btn-warning" asp-action="DeleteWeeklyReport" asp-route-Id="@item.Id">Delete task</a>
        </div>
    </div>
}