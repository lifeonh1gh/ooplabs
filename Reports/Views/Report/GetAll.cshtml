@model Pagination<Reports.Entities.Report>
@{
    ViewData["Title"] = "All Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reports</h1>

<p style="text-align:left;margin-right:20px;">
    <a class="btn btn-success" asp-action="Create">Create Report</a>
</p>
<form asp-action="GetAll" method="get">
    <div class="form-actions no-color">
        <p>
            <input type="text" name="SearchString" value="@ViewData["ReportFilter"]" placeholder="Search..."/>
            <input type="submit" value="Search" class="btn btn-dark"/>
            <a class="btn btn-danger" asp-action="GetAll">Back to Full List</a>
        </p>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-success table-striped">
        <thead>
        <tr class="text-center">
            <th>
                <a asp-action="GetAll" asp-route-sortOrder="@ViewData["StateSort"]" asp-route-employeeFilter="@ViewData["EmployeeFilter"]">State</a>
            </th>
            <th>
                <a asp-action="GetAll" asp-route-sortOrder="@ViewData["DescriptionSort"]" asp-route-employeeFilter="@ViewData["EmployeeFilter"]">Description</a>
            </th>
            <th>
                <a asp-action="GetAll" asp-route-sortOrder="@ViewData["DateSort"]" asp-route-employeeFilter="@ViewData["EmployeeFilter"]">Creation Date</a>
            </th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @item.State
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.CreationDate
                </td>
                <td>
                    <a asp-action="Update" class="btn btn-primary" asp-route-Id="@item.Id">Update</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-Id="@item.Id">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-Id="@item.Id">Delete</a>
                    <a asp-action="InsertTask" class="btn btn-success" asp-route-Id="@item.Id">Insert Task</a>
                    <a asp-action="AllTasks" class="btn btn-warning" asp-route-Id="@item.Id">Completed Tasks</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <a asp-action="GetAll"
       asp-route-sortOrder="@ViewData["ReportSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-reportFilter="@ViewData["ReportFilter"]"
       class="btn btn-dark @prevDisabled">
        Previous
    </a>
    <a asp-action="GetAll"
       asp-route-sortOrder="@ViewData["ReportSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-reportFilter="@ViewData["ReportFilter"]"
       class="btn btn-dark @nextDisabled">
        Next
    </a>
</div>