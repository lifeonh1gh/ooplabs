@model Reports.Models.Report.TaskInsertModel
@{
    ViewData["Title"] = "Task Insert Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="InsertTask">
    <div class="form-group">
        <input asp-for="TaskName" class="form-control" placeholder="Task name"/>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Send"/>
        <a class="btn btn-danger" asp-action="GetAll">Back</a>
    </div>
</form>